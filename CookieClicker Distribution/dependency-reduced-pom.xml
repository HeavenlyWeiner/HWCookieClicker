<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cookieclicker-parent</artifactId>
    <groupId>de.zillolp</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>cookieclicker-dist</artifactId>
  <build>
    <directory>../target</directory>
    <finalName>${project.parent.name}-${project.parent.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>de.zillolp:*</include>
                  <include>com.zaxxer:HikariCP</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>de.zillolp.cookieclicker.CookieClicker</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>de.zillolp:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.MF</exclude>
                  </excludes>
                </filter>
              </filters>
              <outputFile>C:\Development\CookieClicker\CookieClicker Premium\plugins\CookieClicker.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>22</maven.compiler.source>
  </properties>
</project>
